<div class="mt-4">
    <div class="row">
        {{#each document}}
        <div class="col-sm-3 clo-lg-12">
            <div class="card course-card-item" style="width: 15rem;">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                <div class="card-body"> 
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="{{this.url}}" class="btn btn-primary">Đọc truyện</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>